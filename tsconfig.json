{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "vite/client"],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "cypress",
    "postcss.config.cjs",
    "src/locale/*",
    "tailwind.config.ts"
  ]
}
